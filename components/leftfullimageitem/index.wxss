@import "/common/flex.wxss";

.order_bd {
  margin: 10px;
  padding: 5px;
  background-color: #fff;
  border: 1px solid #d8d8d8;
  border-radius: 5px;
}

.order_goods {
  font-size: 13px;
  min-height: 60px;
}

.order_goods_img {
  margin-left: 2px;
  margin-right: 2px;
}

.order_goods_img .img {
  display: block;
  width: 105px;
  height: 105px;
}


.order_goods_info {
  margin-left: 8px;
}

.order_goods_info_inner {
  margin-right: 5px;
}

.order_goods_discount {
  font-size: 12px;
  color: #d6800b;
  height: 22px;
  line-height: 22px;
  margin-top: 2px;
}

.order_goods_attr {
  color: silver;
  font-size: 12px;
  margin-top: 12px;
}


.order_goods_price {
  font-size: 14px;
  height: 22px;
  line-height: 22px;
  color: red;
  margin-top: 1px;
}

.introduction {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  min-height: 30px;
}

.small {
  font-size: 80%;
}
