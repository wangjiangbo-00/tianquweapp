@import "/common/flex.wxss";

.comm_bd {
  margin: 10px;
  background-color: #fff;
  border: 1px solid #d8d8d8;
  border-radius: 5px;
}

.order_goods {
  margin-top: 36rpx;
  margin-left: 22rpx;
  margin-right: 22rpx;
}

.status_over {
  color: sandybrown;
  height: 45rpx;
}

.status_coming {
  color: greenyellow;
  height: 45rpx;
}

.status_on {
  color: red;
  height: 45rpx;
}

.giftname {
  margin-bottom: 12rpx;
}

.img {
  display: block;
  width: 750rpx;
  height: 375rpx;
}

.goods_img {
  width: 100%;
  border-bottom: 1px solid #d8d8d8;
}

.lotteryheader {
  margin-top: 16rpx;
  margin-left: 22rpx;
  margin-right: 22rpx;
  font-size: 14px;
}

.introduction {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  color: black;
  font-size: 14px;
  font-weight: 650;
}

.lotterydesp {
  padding-right: 15px;
}

.mode {
  color: silver;
  font-size: 13px;
  margin-top: 4px;
  margin-bottom: 36rpx;
}
