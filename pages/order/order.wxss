.order_goods_price i {
  font-size: 12px;
}



.marg_right {
  margin-right: 10px;
}


.order_opt {
  padding: 15px 10px 50px 0;
  background-color: #fff;
  border-top: 1px solid #d7d7d7;
}

.orderbtn{

  width: 24%;
  
  height: 25px;
  color: black;
  line-height: 25px;
  border-radius: 4px;
  margin-left: 15rpx;
  text-align: center;
  border: 1px solid #dddee1;
}

.order_btn .a {

  width: 30%;
  
  height: 25px;
  color: black;
  line-height: 25px;
  border-radius: 4px;
  margin-left: 15rpx;
  text-align: center;
  border: 1px solid #dddee1;
}

.order_opt:after {
  content: '';
  display: block;
  clear: both;
  height: 0;
  visibility: hidden;
}


.fixopt {

    
    background-color: white;
    bottom: 0;
    left: 0;
    
    position: fixed;
    width: 100%;
    z-index: 901;
    height: 100rpx;

    border-top: 1px solid #D8D8D8; 
}

.fix_inner{
  padding: 20rpx;
}
