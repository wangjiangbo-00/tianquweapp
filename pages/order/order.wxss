}

.order_goods {
  position: relative;
  padding: 15px 0;
  padding-left: 75px;
  font-size: 12px;
  border-bottom: 1px solid #d7d7d7;
  min-height: 60px;
  display: block;
}

.order_goods_img {
  position: absolute;
  top: 15px;
  left: 0;
