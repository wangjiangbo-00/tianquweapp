.body {
  margin: 0 auto;
  min-width: 320px;
  max-width: 640px;
  height: 100%;
  background: #fff;
  font-size: 12px;
  font-family: Helvetica, STHeiti STXihei, Microsoft JhengHei, Microsoft YaHei, Arial;
  line-height: 1.5;
  color: #666;
  -webkit-text-size-adjust: 100% !important;
  -webkit-user-select: none;
  -moz-user-select: none;
  -ms-user-select: none;
  user-select: none;
  background-color: #f1f1f2;
}

.flex-grid_4 {
  padding: 0px 10px;
  margin: 20px 0px;
  flex: 0 0 25%;
  box-sizing: border-box;
}

.weui-grids_1 {
  border-top: 1rpx solid #d9d9d9;
  border-bottom: 1rpx solid #d9d9d9;
  overflow: hidden;
  display: flex;
  display: -webkit-flex;
  flex-flow: row wrap;
  align-content: flex-start;
}

.weui-grid__desc {
  display: block;
  text-align: center;
  color: red;
  font-size: 14px;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.weui-grid_2 {
  padding: 0px 10px;
  margin: 5px 0px;
  flex: 0 0 33.33%;
  box-sizing: border-box;
}

.rightborder {
