

.order {
    background-color: #fff;
    border-top: 1px solid #e4e4e4;
    border-bottom: 1px solid #dedede;
    font-size: 12px;
    margin-top: 6px;
}


.introduction{
  overflow : hidden;
text-overflow: ellipsis;
display: -webkit-box;
-webkit-line-clamp: 2;
-webkit-box-orient: vertical;

min-height: 30px
}



.order_goods_sum{
  margin-right: 5px
}

.order_hd {
    background-color: #fff;
    
    height: 39px;
    line-height: 39px;
    overflow: hidden;
    padding: 0 10px;
}


.order_bd {
    background-color: #fff;
    border-bottom: 1px solid #dedede;
    padding: 0 10px;
}

.order_goods {
    position: relative;
    
    padding: 5px 0px ;
    font-size: 12px;
    
    margin: 0px 10px;
    min-height: 60px;

    background-color: #f1f1f2;
}
.order_goods_img {
    
    top: 15px;
    left: 0;
}

.order_goods_img .img {
    display: block;
    width: 60px;
    height: 60px;
    border: 1px solid #d7d7d7;
}

.order_goods_info {
    position: relative;
    margin-left: 5px
}

.order_goods_attr {
    color: silver;
    margin-top: 5px;
}


.order_goods_price {
    float: right;
    font-size: px;
    height: 22px;
    line-height: 22px;
    color: red;
    margin-top: 5px;
    
}

.order_total {
    font-size: 12px;
    height: 16px;
    line-height: 16px;
    overflow: hidden;
    color: #5a5a5a;
    text-align: right;
    padding-bottom: 10px;

    padding-right: 10px;
    padding-top: 10px;

   


}

.order_total_info {
    float: left;
}

.order_price {
    float: right;
}

.order_price .b {
    color: #df2128;
    font-size: 16px;
    font-weight: 400;
}

.order_total:after {
    content: '';
    display: block;
    clear: both;
    height: 0;
    visibility: hidden;
}



.order_status {
    
    color: #d00;
    margin-right: 1px;
}
.order_opt {
    
    border-top: 1px solid #dddee1;
}

.order_opt-inner{
  padding: 10rpx;
}




.fix_inner{
  padding: 20rpx;
}

.order_opt:after {
    content: '';
    display: block;
    clear: both;
    height: 0;
    visibility: hidden;
}

.orderbtn{

  width: 30%;
  
  height: 25px;
  color: black;
  line-height: 25px;
  border-radius: 4px;
  margin-left: 15rpx;
  text-align: center;
  border: 1px solid #dddee1;
}


